<!DOCTYPE html>
<html>
<head>
  <title>SugarApp</title>
  <%= stylesheet_link_tag  'application', media: 'all' %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
 
  <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.2/underscore.js"></script>
   <%= javascript_include_tag  'https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js' %>
  <%= javascript_include_tag  'https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.js' %>
   <%= javascript_include_tag 'application'%>

  <%= csrf_meta_tags %>
</head>
<body>
  <header>
  
    <nav class="clearfix">
      <ul>
        <% if current_user %>
        <li id="logo">
          <%= link_to 'SugarWatch', new_food_path %>
        </li>
        <li>
            <%= link_to('Logout', '/session', :method => :delete) %>        
        </li>
        <li>
          <a href="/foods/new">Home</a>
        </li>
         <li>
           <a href="<%= daily_sugar_path %>">Sugarfy</a>
          </li>
       <% else %>
        <li id="logo">
          <%= link_to 'SugarWatch', welcome_path %>
        </li>
        <li>
          <%= link_to('Login', new_session_path)  %>  
        </li>
      <% end %>
        </ul>
        </nav>
      </header>
   
<div id='container'>

    <%= yield %>
  <footer>
       <p>&copy; Sofia Petsoulakis</p>
  </footer>
</div>
</body>

</html>
